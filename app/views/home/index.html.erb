<div class="home md-whiteframe-z3">
    <div class="row">
        <div class="game csgo">
            <h2>            <div class="live-dot"></div>
                <span class="live">Live</span> Games</h2>
        </div>
        <ul class="overviews">
                <% @matches.each do |match| %>
                    <li class="match-overview">
                        <%= link_to match_path(match), :target => "_self" do %>                    <% end %>
                        <p class="team-1"><%= match.team_1 %></p>
                        <p class="versus">vs</p>
                        <p class="team-2"><%= match.team_2 %></p>
                        <div class="score">
                            <p class="team-1"><%= match.team_1_score %></p>
                            <p class="team-2">
                                <%= match.team_2_score %>
                            </p>
                        </div>
                    </li>
                <% end %>
        </ul>
    </div>
    <div class="row">
    <div class="game csgo">
        <h2>Finished Games</h2>
    </div>
        <ul class="overviews">
            <% @matches.each do |match| %>
                <li class="match-overview">
                    <%= link_to match_path(match), :target => "_self" do %>                    <% end %>
                    <p class="team-1"><%= match.team_1 %></p>
                        <p class="versus">vs</p>
                        <p class="team-2"><%= match.team_2 %></p>
                        <div class="score">
                            <p class="team-1"><%= match.team_1_score %></p>
                            <p class="team-2">
                                <%= match.team_2_score %>
                            </p>
                        </div>
                </li>
            <% end %>
        </ul>
    </div>
</div>